<div class="container">
	<div class="flickr_pagination">
		<%= will_paginate @articles, :container => false %>
	</div>
	<% @articles.each do |article| %>
		<div class="card text-center mt-4 shadow mb-5 bg-white rounded" id="<%= article.id %>">
			<div class="card-header font-italic">
				<% if article.user %>
					Article by <%= link_to article.user.username, user_path(article.user) %>
				<% end %>
			</div>
			<div class="card-body">
				<h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "text-success" %></h5>
				<p class="card-text"><%= truncate(article.description,length:100) %></p>
				<%= link_to 'View', article_path(article.id), class:"btn btn-primary" %>
				<% if logged_in? && (current_user == article.user || current_user.admin?) %>
					<%= link_to 'Edit', edit_article_path(article.id), class:"btn btn-secondary" %>
					<%= link_to 'Delete', article_path(article.id), method: :delete, data: {confirm: "Are you sure?"}, remote: true, class:"btn btn-danger" %>
				<% end %>
			</div>
			<div class="card-footer text-muted">
				<small>Created <%= time_ago_in_words(article.created_at) %> ago , edited <%= time_ago_in_words(article.updated_at) %> ago</small>
			</div>
		</div>
	<% end %>
</div>